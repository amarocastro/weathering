	<Grid>


		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup>
				<VisualState>
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="640"/>
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="ContentFrame.Padding" Value="24,0,24,0"/>
						<!--<Setter Target="AppName.Margin" Value="12,12,12,12"/>-->

					</VisualState.Setters>
				</VisualState>
				<VisualState>
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="0"/>
					</VisualState.StateTriggers>
					<VisualState.Setters>

					</VisualState.Setters>
				</VisualState>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>

		<Grid.Resources>
			<ResourceDictionary>
				<ResourceDictionary.MergedDictionaries>
					<ResourceDictionary Source="Resources/Colors.xaml" />
					<ResourceDictionary Source="Resources/ElementsStyle.xaml" />
				</ResourceDictionary.MergedDictionaries>
			</ResourceDictionary>
		</Grid.Resources>

		<NavigationView ItemInvoked="NavigationView_OnItemInvoked"
						IsBackButtonVisible="Collapsed">
			<NavigationView.MenuItems>
				<NavigationViewItem Icon="Find" Content="Search" Tag="SearchPage"/>
				<NavigationViewItem Icon="MapPin" Content="Plan" Tag="LocationPage"/>
				<NavigationViewItem Icon="List" Content="Favourites" Tag="FavouritePage"/>
			</NavigationView.MenuItems>
			<Frame x:Name="ContentFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                   Background="Transparent">

				<Frame.ContentTransitions>
					<TransitionCollection>
						<NavigationThemeTransition/>
					</TransitionCollection>
				</Frame.ContentTransitions>
			</Frame>
		</NavigationView>
